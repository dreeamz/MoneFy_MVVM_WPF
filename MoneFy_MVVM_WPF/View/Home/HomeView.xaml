<UserControl x:Class="MoneFy_MVVM_WPF.View.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneFy_MVVM_WPF.View.Home"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"             
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
             mc:Ignorable="d" >

    <StackPanel Height="800" Width="400" Background="#FF9C9C98" >
        <Label Content="MoneFy" Height="50"
               HorizontalContentAlignment="Center"
               Foreground="#FFEAFF13"
               FontSize="30"
               FontWeight="Bold"
               Background="Black"
               />

        <!--Grid for AppBar-->
        <Grid Height="44">
            <ContentControl Content="{Binding AppBar}"/>
        </Grid>


        <Grid Height="706">
            <!--Main separation of this usercontrol-->
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <!--Balance Expenses labels-->
            <Label                
                VerticalAlignment="Bottom"
                Margin="0,40,0,0"
                FontWeight="Black"
                Grid.Row="0"
                Grid.Column="0"                
                Foreground="Black"               
                Content="BALANCE:"
                FontSize="24"/>
            <Label              
                Grid.Row="1"
                FontWeight="Black"
                Grid.Column="0"               
                VerticalAlignment="Center"                
                Foreground="Black"
                Content="EXPENSES:"
                FontSize="20"/>
            <Label                
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                FontWeight="Black"
                Margin="0,36,0,0"
                Grid.Row="0"
                Grid.Column="1"
                Foreground="#FF008706"               
                Content="{Binding Balance}"
                FontSize="30"/>
            <Label              
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Right"
                FontWeight="Black"    
               VerticalAlignment="Center"                            
                Foreground="#FFAA0808"
                Content="{Binding Expenses}"
                FontSize="25"/>


            <!--Grids for side bars-->
            <Grid
                  x:Name="LeftSideBar" 
                 Panel.ZIndex="1"
                  Grid.Row="0" 
                  Grid.RowSpan="2">
                <ContentControl Content="{Binding LeftSideBar}"/>
            </Grid>
            <Grid 
                x:Name="RightSideBar" 
                  Grid.Row="0"
                  Grid.Column="1"
                   Panel.ZIndex="1"
                Grid.RowSpan="2">
                <ContentControl Content="{Binding RightSideBar}"/>
            </Grid>


            <!--Central grid for Piechart and Consumprions-->
            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.4*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.42*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <!--PieChartAndItsSeries-->
                <lvc:PieChart                                                    
                               Grid.Column="1" Grid.Row="1"
                               Series="{Binding SeriesCollection}"
                               Hoverable="True"
                               InnerRadius="40"                        
                               HoverPushOut="10"
                               FontSize="25">
                </lvc:PieChart>

                <!--Consumption Buttons-->
                
               
                <!--Transport-->
                <Button 
                    Command="{Binding }"
                       Grid.Column="1"
                       Height="70"
                       Width="110"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"                            
                       FontWeight="Heavy"
                       Background="#FF483D5B">
                    <md:PackIcon
                          Kind="TrainCar" 
                          Width="40" 
                          Height="50" 
                          Foreground="White"/>

                </Button>
                <!--Workout-->
                <Button        
                       Command="{Binding }"                    
                       Grid.Row="1"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"                        
                        Height="110"
                       FontWeight="Heavy" Background="Black">
                    <md:PackIcon 
                        Kind="Dumbbell"
                        Width="40" 
                        Height="50" 
                        Foreground="White" />
                </Button>                
                <!--Food-->
                <Button
                       Command="{Binding }"
                       Grid.Row="2"
                       Height="70"
                       Width="110"
                       Grid.Column="1"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="25"
                       FontWeight="Heavy"
                       Background="#FFD66B00">
                    <md:PackIcon 
                        Kind="Noodles" 
                        Width="40"                                  
                        Height="50"
                        Foreground="White"/>
                </Button>
                <!--Party-->
                <Button 
                    Command="{Binding }"
                       Grid.Row="1"
                       Height="110"
                       Grid.Column="2"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"                        
                       FontWeight="Heavy"                      
                       Background="#FFE21919">
                    <md:PackIcon 
                        Kind="PartyPopper" 
                        Width="40"                        
                        Height="50" 
                        Foreground="White"   />
                </Button>
                <!--Aptek-->
                <Button        
                       Command="{Binding }"                    
                       Grid.Row="0" Grid.Column="0"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"                        
                        Height="70"
                       FontWeight="Heavy" Background="#FF00C195">
                    <md:PackIcon 
                        Kind="HospitalBoxOutline"
                        Width="40" 
                        Height="50" 
                        Foreground="White" />
                </Button>
                <!--CellPhone-->
                <Button 
                    Command="{Binding }"
                       Grid.Column="0"  Grid.Row="2"
                       Height="70"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"                            
                       FontWeight="Heavy"                        
                       Background="#FF00B5C7">
                    <md:PackIcon
                          Kind="CellphoneBasic" 
                          Width="40" 
                          Height="50" 
                          Foreground="White" />
                </Button>
                <!--Coat Hanger-->
                <Button 
                    Command="{Binding }"
                       Grid.Row="0"
                       Grid.Column="2"
                       Height="70"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"                        
                       FontWeight="Heavy"                      
                       Background="#FFCA3BFF">
                    <md:PackIcon 
                        Kind="CoatHanger" 
                        Width="40"                        
                        Height="50" 
                        Foreground="White"   />
                </Button>
                <!--Pets-->
                <Button
                       Command="{Binding }"
                       Grid.Row="2"
                       Height="70"
                       Width="70"
                       Grid.Column="2"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="25"
                       FontWeight="Heavy"
                       Background="#FF162453">
                    <md:PackIcon 
                        Kind="Owl" 
                        Width="40"                                  
                        Height="50"
                        Foreground="White"/>
                </Button>
            </Grid>


            <!--bottom buttons-->
            <Button 
                Command="{Binding ToTransfer}"
                FontSize="60"
                FontWeight="Black"
                Grid.Row="3"
                FontStretch="Expanded"
                Width="120"
                Height="120" Background="#FF8954E6" >
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse Fill="#FF8202DA"/>
                            <ContentPresenter Content="+"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button
                 Command="{Binding ToSubstract}"
                Grid.Row="3"                
                FontSize="60"
                Grid.Column="1"
                FontWeight="Black"
                FontStretch="Expanded"
                Width="120"
                Height="120">
                <Button.Template >
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid     >
                            <Ellipse Fill="#FFAA1B1B"/>
                            <ContentPresenter Content="-"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </StackPanel>
</UserControl>
